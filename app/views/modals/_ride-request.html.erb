<div class="modal fade" id="rideRequestModal" tabindex="-1" role="dialog" aria-labelledby="rideRequestModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header ontyme" id="icon-modal">
        <h4 class="modal-title ontyme-title" id="rideRequestModalLabel">Request a Ride</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" id="close-button">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'forms/ride-from-hotel-form' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-block btn-lg btn-danger" data-dismiss="modal">Exit</button>
      </div>
    </div>
  </div>
</div>
