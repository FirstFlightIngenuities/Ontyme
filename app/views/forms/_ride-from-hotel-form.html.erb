<%= form_for :trip, :url => trips_path, :remote => true, html: { :id => 'create_new_trip' } do |f| %>
  <div class="form-group">
    <%= f.select(:destination, options_for_select([["Select Your Destination",""],["JFK","JFK"],["LaGuardia","LaGuardia"],["Newark","Newark"]]), {}, class: "custom-select form-control") %>
    <div class="form-group position-relative">
      <%= f.label :number_passengers, "How Many Passengers?", class: "control-label-hide", id: "nickNameLabel" %>
      <%= f.text_field :number_passengers, { id: "nickname-input", class: "form-control", type: "text", placeholder: "How Many Passengers?" } %>
    </div>
    <div class="form-group position-relative">
      <%= f.label :number_luggage, "How much Luggage?", class: "control-label-hide", id: "nickNameLabel" %>
      <%= f.text_field :number_luggage, { id: "nickname-input", class: "form-control", type: "text", placeholder: "How much Luggage?" } %>
    </div>
  </div>
  <%= f.submit 'trip', { value: "Submit", id: "submitTrip", class: "btn btn-lg btn-success" }%>
<% end %>
